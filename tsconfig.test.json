{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "@testing-library/jest-dom"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ],
            "@tests/*": [
                "tests/*"
            ]
        }
    },
    "include": [
        "tests/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}