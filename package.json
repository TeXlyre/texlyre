{
	"name": "texlyre",
	"private": true,
	"version": "0.2.18",
	"description": "A local-first LaTeX web editor with real-time collaboration.",
	"author": "Fares Abawi <fares@abawi.me> (https://abawi.me)",
	"license": "AGPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "https://github.com/texlyre/texlyre.git"
	},
	"type": "module",
	"scripts": {
		"predev": "node scripts/copy-pdf-cmaps.cjs",
		"dev": "node scripts/generate-plugins-index.js && vite",
		"dev:https": "node scripts/generate-plugins-index.js && cross-env VITE_USE_HTTPS=true vite --host",
		"build": "node scripts/update-sw-version.js && node scripts/generate-plugins-index.js && tsc && vite build",
		"build:clean": "node scripts/clean-cache.cjs && npm run build",
		"clean:cache": "node scripts/clean-cache.cjs",
		"generate-plugins": "node scripts/generate-plugins-index.js",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"clean": "eslint . --ext ts,tsx --fix && npx @biomejs/biome check --fix",
		"preview": "vite preview"
	},
	"dependencies": {
		"@biomejs/biome": "^1.8.3",
		"@codemirror/autocomplete": "^6.0.0",
		"@codemirror/lang-css": "^6.3.1",
		"@codemirror/lang-html": "^6.4.9",
		"@codemirror/lang-json": "^6.0.2",
		"@codemirror/lang-markdown": "=6.3.2",
		"@codemirror/lang-python": "^6.2.1",
		"@codemirror/language": "^6.0.0",
		"@codemirror/lint": "^6.0.0",
		"@codemirror/state": "^6.5.0",
		"@codemirror/theme-one-dark": "^6.1.3",
		"@codemirror/view": "^6.0.0",
		"@lezer/common": "^1.0.0",
		"@lezer/generator": "^1.0.0",
		"@lezer/highlight": "^1.0.0",
		"@lezer/lr": "^1.0.0",
		"@picocss/pico": "^2.0.6",
		"@replit/codemirror-vim": "^6.3.0",
		"bib-editor": "^1.14.0",
		"codemirror": "^6.0.0",
		"codemirror-lang-bib": "^0.1.1",
		"codemirror-lang-latex": "^0.1.0-alpha.2",
		"file-saver": "^2.0.5",
		"filepizza-client": "^2.0.0-alpha.2",
		"idb": "^8.0.2",
		"jszip": "^3.10.1",
		"lib0": "^0.2.42",
		"lodash": "^4.17.21",
		"mime": "^4.0.1",
		"nanoid": "^5.0.5",
		"next": "^14.2.28",
		"pdfjs-dist": "5.3.31",
		"peerjs": "^1.5.1",
		"qrcode": "^1.5.4",
		"react": "^18.2.0",
		"react-ace": "^10.1.0",
		"react-dom": "^18.2.0",
		"react-pdf": "10.0.1",
		"vite-plugin-wasm": "^3.3.0",
		"workbox-build": "^7.3.0",
		"y-codemirror.next": "=0.3.5",
		"y-indexeddb": "^9.0.11",
		"y-webrtc": "^10.2.0",
		"y-websocket": "^1.5.0",
		"yjs": "^13.5.51"
	},
	"overrides": {
		"rimraf": "^4.0.0"
	},
	"devDependencies": {
		"@types/qrcode": "^1.5.5",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitejs/plugin-basic-ssl": "^2.0.0",
		"@vitejs/plugin-react": "^4.5.0",
		"cross-env": "^7.0.3",
		"eslint": "8.57.1",
